%table  
  %thead
    %tr
      %th
        = f.label :actividades, t("activerecord.attributes.actividade.nombre", :default => "Actividades"), :class => :label
        = f.collection_select(:actividade_id, @actividades, :id, :nombre, { :class => 'text_field input' }) 
    %tr
      %th
        = f.label :nombre, t("activerecord.attributes.alumno.nombre", :default => "Nombre"), :class => :label
        = f.text_field :nombre, :class => 'text_field'
    %tr
      %th
